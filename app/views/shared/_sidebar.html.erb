<% if current_page?(controller: "search", action: "index") %>
  <div class="col-3">
    <div class="list-group">
      <%= active_link_to "Sets", search_path(query: params[:query]), class: "list-group-item list-group-item-action" %>
      <%= active_link_to "Users", search_path(query: params[:query], :type => "users"), class: "list-group-item list-group-item-action" %>
      <%= active_link_to "Cards", search_path(query: params[:query], :type => "cards"), class: "list-group-item list-group-item-action" %>
    </div>
  </div>

<% elsif controller.controller_name == 'users' && controller.action_name == 'show'%>
  <div class="col-3 mt-lg-5">
    <div class="card" >
      <%= user_image(@user, class: "card-img-top", style: "max-height:300px;") %>
      <div class="card-body">
        <h5 class="card-title">
          <%= @user.name %>
        </h5>
        <p class="card-text">
          <%= @user.decks.count %> <%= t(:set) %>
        </p>
      </div>
    </div>
  </div>
<% elsif current_user %>
  <div class="col-3">
    <div class="list-group">
      <%= active_link_to t(:home), home_path, class: "list-group-item list-group-item-action" %>
      <%= active_link_to t(:settings), edit_user_path(current_user), class: "list-group-item list-group-item-action" %>
      <%= active_link_to t(:profile), user_path(current_user), class: "list-group-item list-group-item-action" %>
    </div>
  </div>
<% end %>
