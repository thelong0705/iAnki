<% if decks.count != 0 %>
  <table class="table table-bordered mt-3 bg-light">
    <thead>
    <tr>
      <th scope="col"><%= t :set_name %></th>
      <th scope="col"><%= t :number_of_cards %></th>
      <th scope="col"><%= t :created_at %></th>
    </tr>
    </thead>
    <tbody>
    <%= render decks %>
    </tbody>
  </table>
<% else %>
  <div class="card mt-3">
    <div class="card-header">
      <%= t :no_set_found %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= t :no_decks_found %></h5>
      <p class="card-text"><%= t :create_set_prompt %></p>
      <%= link_to t(:create_set), new_deck_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
