<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="public-tab" data-toggle="tab" href="#public" role="tab" aria-controls="public" aria-selected="true">
      <%= t :public_sets %>
    </a>
  </li>
  <% if @user == current_user %>
    <li class="nav-item">
      <a class="nav-link" id="not-public-tab" data-toggle="tab" href="#not-public" role="tab" aria-controls="not-public" aria-selected="false">
        <%= t :not_public_sets %>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">
        <%= t :learning %>
      </a>
    </li>
  <% end %>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="public" role="tabpanel" aria-labelledby="public-tab">
    <%= render partial: "shared/deck_table", locals: {decks: @user.decks.is_public} %>
  </div>
  <% if @user == current_user %>
    <div class="tab-pane fade show" id="not-public" role="tabpanel" aria-labelledby="not-public-tab">
      <%= render partial: "shared/deck_table", locals: {decks: @user.decks.is_not_public} %>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <%= render partial: "shared/deck_table", locals: {decks: @learning_decks} %>
    </div>
  <% end %>
</div>


