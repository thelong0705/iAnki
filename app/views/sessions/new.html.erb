<h1>Login</h1>

<%= form_with url: "/login", local: true, scope: "session", class: "mt-5" do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <%= f.submit "Login", class: "btn btn-primary" %>
<% end %>