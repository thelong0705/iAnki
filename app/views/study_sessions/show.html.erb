<div class="all-learn-area" style="<%= 'display: none' if @card %>">
  <div class="card text-center" style="height: 300px">
    <div class="card-header">
      Congratulations !!
    </div>
    <div class="card-body mt-lg-5">
      <h5 class="card-title">You have learn all cards of this set</h5>
      <%= form_with url: study_session_path(@deck), method: "patch", class: "mt-3" do |f| %>
        <%= f.submit "Learn again", class: "btn-lg btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<% if @card %>
  <div class="flash-card-area">
    <div class="flip-card border-info">
      <div class="flip-card-inner">
        <div class="flip-card-front bg-light">
          <h1 class="question-area">
            <%= @card.question %>
          </h1>
        </div>
        <div class="flip-card-back bg-light ">
          <h1 class="answer-area">
            <%= @card.answer %>
          </h1>
        </div>
      </div>
    </div>
    <%= form_with url: study_session_path(@deck), method: "patch", class: "mt-3" do |f| %>
      <%= hidden_field_tag(:card_id, @card.id) %>
      <%= f.submit "Study again", class: "btn-lg btn-primary" %>
      <%= f.submit "Got it", class: "btn-lg btn-primary float-right" %>
    <% end %>
  </div>
<% end %>