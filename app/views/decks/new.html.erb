<%= form_with model: @deck, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.fields_for :cards do |f| %>
      <%= f.label :question %>
      <%= f.text_field :question %>
      <%= f.label :answer %>
      <%= f.text_field :answer %>
    <% end %>
  </div>
  <%= f.submit "Create set", class: "btn btn-primary" %>
<% end %>